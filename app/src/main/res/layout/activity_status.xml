<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StatusActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@android:color/holo_green_dark"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Status:"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical|right"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:text="Lulus"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical|left"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:text="Butiran Sepanduk/Kain Pampang"
        android:textColor="@android:color/white"
        android:background="#2F4F4F"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:paddingTop="10dp"
        android:background="#808080"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:background="#808080"
            android:text="Tempoh Pameran"/>

        <TextView
            android:id="@+id/durationTV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textAlignment="center"
            android:background="#808080"
            android:textSize="18sp"
            android:text="12/06/2018 - 12/07/2018"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:background="#A9A9A9"
            android:textAlignment="center"
            android:text="Lokasi"/>

        <TextView
            android:id="@+id/locationTV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#A9A9A9"
            android:textAlignment="center"
            android:textSize="18sp"
            android:text="Heaven"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:background="#808080"
            android:text="Tajuk Visual"/>

        <TextView
            android:id="@+id/titleTV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#808080"
            android:textSize="18sp"
            android:textAlignment="center"
            android:text="LOLIDK"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textStyle="bold"

            android:background="#A9A9A9"
            android:text="Nama Pemilik Paparan/Name Syarikat"/>

        <TextView
            android:id="@+id/nameTV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#A9A9A9"
            android:textSize="18sp"
            android:textAlignment="center"
            android:text="Oh No Sdn. Bhd."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#808080"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="No. Telefon"/>

        <TextView
            android:id="@+id/phoneTV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textSize="18sp"
            android:background="#808080"
            android:textAlignment="center"
            android:text="012-345678"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/validationDetails"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:background="#808080"
        android:orientation="vertical"
        android:visibility="visible">

        <Button
            android:id="@+id/navigateBtn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Navigasi"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/cancelBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:text="Batalkan Laporan"/>

            <Button
                android:id="@+id/doneBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:text="Selesai"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/locationDetails"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:background="#808080"
        android:paddingBottom="10dp"
        android:visibility="gone">

        <Button
            android:id="@+id/doneBtn2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Selesai"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"/>
    </LinearLayout>
</LinearLayout>